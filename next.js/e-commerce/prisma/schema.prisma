datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float
  currency    String  @default("USD")
  discount    Float   @default(0)
  rate        Float   @default(0)
  imageUrl    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
